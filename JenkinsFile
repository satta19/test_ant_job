pipeline {
    agent any
    tools {ant "antHome"}
        stages {
            stage ('Prepare') {
            steps {
                echo '\n'
                echo '\n'
                echo '****** Git Pull ********'
                checkout scm
                  }
            }
        stage('Merge Request') {
        steps {
              echo '\n'
                echo '\n'
                echo '****** MERGE REQUEST ********'
             sh 'git push -o merge_request.create -o merge_request.target=origin/master'
              }
           }

        stage('Build develop') {
        steps {
                echo '\n'
                echo '\n'
                echo '****** BUILD ********'
                sh 'echo $HOME'
                sh 'ant -file build.xml'
                }
	     }
     }
  }

